FROM node:22-alpine AS builder
WORKDIR /app

RUN npm i -g pnpm@9

# Copy workspace config
COPY pnpm-lock.yaml pnpm-workspace.yaml package.json turbo.json ./

# Copy package.json files
COPY apps/auth/package.json ./apps/auth/
COPY packages/database/package.json ./packages/database/
COPY packages/biome-config/package.json ./packages/biome-config/
COPY packages/typescript-config/package.json ./packages/typescript-config/

# Copy source (auth needs it for postinstall)
COPY apps/auth ./apps/auth
COPY packages ./packages

# Install and build
RUN pnpm install --frozen-lockfile
RUN pnpm --filter @repo/auth build

# ---------- Runtime ----------
FROM node:22-alpine AS runtime
WORKDIR /app

RUN npm i -g pnpm@9

# Copy workspace config
COPY pnpm-workspace.yaml package.json pnpm-lock.yaml ./

# Copy package.json files
COPY apps/auth/package.json ./apps/auth/
COPY packages/database/package.json ./packages/database/
COPY packages/biome-config/package.json ./packages/biome-config/
COPY packages/typescript-config/package.json ./packages/typescript-config/

# Copy packages source
COPY --from=builder /app/packages ./packages

# Copy built auth
COPY --from=builder /app/apps/auth/.next ./apps/auth/.next
COPY --from=builder /app/apps/auth/public ./apps/auth/public

# Install production deps
RUN pnpm install --prod --frozen-lockfile --ignore-scripts

EXPOSE 3000

WORKDIR /app
CMD ["pnpm", "--filter", "@repo/auth-server", "start"]